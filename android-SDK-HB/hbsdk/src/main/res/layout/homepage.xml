<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/materialTabHost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_host_height"
        android:background="@android:color/white"
        app:stl_customTabTextLayoutId="@layout/custom_smart_tab"
        app:stl_customTabTextViewId="@id/custom_text"
        app:stl_distributeEvenly="false"
        app:stl_dividerColor="@color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorInFront="true"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/indicator"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="1dp"
        app:stl_indicatorWithoutPadding="true"
        app:stl_underlineColor="@color/divider"
        app:stl_underlineThickness="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@android:color/white"
        android:padding="0dp" />

</LinearLayout>